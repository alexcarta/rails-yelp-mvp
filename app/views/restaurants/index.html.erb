<h1 class="mt-5" style="text-align: center;">Restaurants</h1>

<div class="d-flex justify-content-center">
  <ul class="list-group p-5" style="width: 400px;">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item" style="text-align: center;">
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
      </li>
    <% end %>
  </ul>
</div>

<div class="d-flex justify-content-center">
  <button type="button" class="btn btn-primary" style="text-decoration: none"><%= link_to "Add a restaurant", new_restaurant_path %></button>
</div>

